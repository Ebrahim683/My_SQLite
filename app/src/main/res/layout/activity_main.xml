<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <!--TextView-->
    <TextView
        android:id="@+id/nameTextID"
        android:text="Name:"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Age:"
        android:id="@+id/ageTextID"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:textSize="30sp"
        android:layout_below="@id/nameTextID"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Profession:"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:id="@+id/professionTextID"
        android:layout_marginTop="15dp"
        android:layout_below="@id/ageTextID"
        android:textSize="30sp"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <!--EditText-->

    <EditText
        android:id="@+id/nameEditText"
        android:hint="My Name"
        android:textColorHint="#EBFA58"
        android:layout_width="293dp"
        android:layout_height="41dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:inputType="text"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@id/nameTextID"
        android:background="#8F2C2222"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/ageEditText"
        android:hint="My Age"
        android:textColorHint="#EBFA58"
        android:layout_width="329dp"
        android:layout_height="41dp"
        android:layout_below="@id/nameEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="13dp"
        android:inputType="number"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="1dp"
        android:layout_toEndOf="@id/ageTextID"
        android:background="#8F2C2222"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/professionEditText"
        android:hint="My Profession"
        android:textColorHint="#EBFA58"
        android:layout_width="329dp"
        android:layout_height="41dp"
        android:layout_below="@id/ageEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="14dp"
        android:inputType="text"
        android:layout_marginEnd="1dp"
        android:layout_toEndOf="@id/professionTextID"
        android:background="#8F2C2222"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="15sp" />


    <!--Button-->

    <Button
        android:id="@+id/addButton"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:text="Save Data"
        android:layout_below="@id/professionTextID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>

   <!-- <Button
        android:id="@+id/showButton"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:text="Show Data"
        android:layout_below="@id/addButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>-->


</RelativeLayout>